@import 'reset.styl'

// $purple = #5e4564;
$black32 = #323232;

body
	display grid
	grid-template-columns 1fr auto
	transition all .5s
	user-select none
	gap 10px
	font-size 16px

.app
	padding-top 150px

.title
	font-size 32px
	line-height 38px
	text-align center
	margin-bottom 15px

.counter
	display flex

.counter__input
	padding 4px 8px
	margin 0 5px
	border 1px solid #444
	border-radius 3px

.counter__btn
	padding 2px 10px
	background #c4c4c4
	border 1px solid #444
	border-radius 3px

.table
	width 800px
	margin 0 auto 20px

.table__th,
.table__td
	width 20%
	padding 4px 10px
	text-align center
	border 1px solid $black32

.table__th
	font-size 18px
	line-height 20px

.table__td
	color $black32
	font-size 16px
	line-height 18px

.total
	width 800px
	margin 0 auto
	font-size 18px
	font-weight 700

.show-modal
	&__btn
		display block
		margin 0 auto
		padding 8px 15px
		border-radius 5px
		font-size 18px
		line-height 20px
		min-width 140px
		color #fff
		background #152bc5
