@import 'reset.styl'

body
	display grid
	grid-template-columns 1fr auto
	transition all .5s
	user-select none
	gap 10px
	font-size 16px

.show-modal
	&__btn
		display block
		margin 0 auto
		padding 8px 15px
		border-radius 5px
		font-size 18px
		line-height 20px
		min-width 140px
		color #fff
		background #152bc5
