@import '../../styl/vars.styl';

.product
	padding-top 30px

.wrap
	display flex
	justify-content center
	max-width 1000px
	margin 0 auto

.productSt
	display grid
	grid-template-rows 300px auto 1fr repeat(3, auto)
	width 280px
	padding 20px 10px
	border-radius 3px
	box-shadow 0 0 5px 1px #ababab

.pictureSt
	flex 1 0 auto
	width 50%
	max-height 480px
	margin-right 40px

.img
	height 100%
	object-fit contain

.info
	padding 20px 15px

.titleSt
	text-align center
	font-size 32px
	font-weight 500
	margin-bottom 25px

.descriptionSt
	font-size 18px
	line-height 26px
	margin-bottom 20px

.priceSt
	display block
	font-size 26px
	font-weight 700
	margin-bottom 35px

.btns
	display flex

.btnBuy
	border-radius 5px
	font-size 24px
	line-height 20px
	padding 15px 25px
	margin-right 15px
	text-align center
	min-width 120px
	background: #152bc5;
	color: #fff;

.btnCart
	border-radius 5px
	font-size 24px
	line-height 20px
	padding 15px 25px
	text-align center
	min-width 120px
	color $black32
	border 1px solid $black32
