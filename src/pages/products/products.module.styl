@import '../../styl/main.styl';
@import '../../styl/vars.styl';

.products
	padding 120px 30px

.titleMain
	font-size 30px
	margin-bottom 25px
	text-align center

.wrap
	display grid
	justify-items center
	grid-template-columns: repeat(3, auto);
	grid-gap: 15px 10px

.productSt
	display grid
	grid-template-rows 300px auto 1fr repeat(3, auto)
	width 280px
	padding 20px 10px
	border-radius 3px
	box-shadow 0 0 5px 1px #ababab

.pictureSt
	width 100%
	height 280px
	margin-bottom 20px
	padding 0

.img
	height 100%
	object-fit contain

.titleSt
	text-align center
	font-size 20px
	font-weight 500
	margin-bottom 10px

.descriptionSt
	font-size 16px
	margin-bottom 10px

.more
	display inline-block
	font-size 16px
	font-weight 700
	color #000087
	cursor pointer
	margin-bottom 10px

.priceSt
	display block
	font-size 16px
	margin-bottom 25px
